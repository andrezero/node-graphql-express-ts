{
  "name": "node-graphql-express-ts",
  "version": "0.0.1",
  "description": "Node.js boilerplate - Typescript + mocha tests + nyc coverage",
  "license": "MIT",
  "homepage": "https://github.com/andrezero/boilerplate-ts-nyc-mocha",
  "author": "Andre Torgal <andre.torgal@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrezero/boilerplate-ts-nyc-mocha.git"
  },
  "scripts": {
    "start": "node --require ts-node/register src/app.ts",
    "start-dev": "nodemon --require ts-node/register src/app.ts",
    "dev": "_mocha --require ts-node/register --watch-extensions ts --watch --recursive src/**/*.spec.* test/**/*.spec.*",
    "lint": "eslint src/ test/ && tslint src/**/*.ts test/**/*.ts",
    "lint-fix": "eslint --fix src/ test/ && tslint --fix src/**/*.ts test/**/*.ts",
    "test": "nyc _mocha --require ts-node/register --recursive src/**/*.spec.* test/**/*.spec.*",
    "test-u": "_mocha --require ts-node/register --recursive src/**/*.spec.*",
    "test-i": "_mocha --require ts-node/register --recursive test/**/*.spec.*",
    "coverage": "node_modules/.bin/http-server coverage/",
    "clean": "rm -rf .nyc_output coverage build",
    "mongo:start": "docker run --name graphql-express -p 27017:27017 mongo & sleep 5",
    "mongo:stop": "docker stop graphql-express && docker rm graphql-express"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "graphql": "^14.2.1",
    "graphql-tools": "^4.0.4",
    "merge-graphql-schemas": "^1.5.8",
    "mongoose": "^5.4.20"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/express-graphql": "^0.6.2",
    "@types/graphql": "^14.2.0",
    "@types/mocha": "^5.2.5",
    "@types/mongodb": "^3.1.22",
    "@types/mongoose": "^5.3.24",
    "@types/node": "^10.12.18",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.10.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "http-server": "^0.11.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "sinon": "^7.2.2",
    "sinon-chai": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2"
  }
}
